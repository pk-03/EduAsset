    <style>
        form{
            margin: 0 auto;
        }
       
       .containerJI{
           width: 700px;
       }
       
       .roe{
           bottom: 20%!important;
       }
    </style>
    
</head>

  <body class="bg-white">
   
    <%- include ./partials/header %>

    <form action="/register" method="post" class="border p-5 containerJI mb-5">
        <%- include ./partials/messages %>
        <h2 class="text-center text-uppercase mt-3">register </h2>
        <small class="text-center d-block">Please fill in the details below to register!</small>
        <hr>
        <div class="form-group">
            <label class="d-block" for="">Name</label>
            <input type="text" class="form-control" id="" name="name" placeholder="Name" value="<%= typeof name != 'undefined' ? name : '' %>" >
            <!-- <i class="fas fa-2x align-top text-secondary pt-1 fa-user"></i> -->
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>" autocomplete="off">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password"  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" 
            title="Password must contain Upperase | Lowercase | Number">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Confirm Password</label>
            <input type="password" class="form-control" name="password2" id="exampleInputPassword2" placeholder="Password"  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" 
            title="Password must contain Upperase | Lowercase | Number">
        </div>
        <div class="form-group">
            <label for="">Phone number</label>
            <input
             oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" 
            type="number" class="form-control" id="phonenumber" name="phone" placeholder="Phone number" maxlength="10"  pattern="[789][0-9]{9}"  title="Use correct Phone no." value="<%= typeof phone != 'undefined' ? phone : '' %>" >
        </div>
        
        <div class="form-group">
            <label for="">College Name</label>
            <input type="text" class="form-control" id="" name="college" placeholder="College name" value="<%= typeof college != 'undefined' ? college : '' %>" >
        </div>

        <button class="btn btn-info">Register</button>
        <div class="d-block float-right">
        <small class="px-2">OR Already! have an account!</small>
        <button class="btn btn-info"><a class="text-light" href="/login">Login</a></button>
        </div>
        


    </form>

<%- include ./partials/footer%>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
